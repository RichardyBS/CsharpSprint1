{
  // Configuração do Ocelot - o coração do gateway
  // TODO: depois vou adicionar load balancing e circuit breaker
  "Rotas": [
    {
      // Serviço de Análise - onde ficam os relatórios e dashboards
      "DownstreamPathTemplate": "/api/analise/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/analise/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      // Serviço de Cobrança - $$$$ é aqui que o dinheiro rola
      "DownstreamPathTemplate": "/api/cobranca/{everything}",
      "DownstreamScheme": "http", 
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/cobranca/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      // Serviço de Notificação - spam... ops, comunicação importante!
      "DownstreamPathTemplate": "/api/notificacao/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost", 
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/api/notificacao/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      // Autenticação - sem token não rola nada aqui
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/auth/{everything}",
      "UpstreamHttpMethod": [ "POST" ]
    }
  ],
  "ConfiguracaoGlobal": {
    "UrlBase": "http://localhost:5000",
    // Rate limiting pra não derrubar o servidor com spam
    "OpcoesLimiteRequisicoes": {
      "ListaBrancaClientes": [],
      "HabilitarLimiteRequisicoes": true,
      "Periodo": "1m",
      "TempoEspera": 60,
      "Limite": 100
    }
  }
}