{
  // Configurações do serviço de cobrança - usando variáveis de ambiente para segurança
  "Logging": {
    "LogLevel": {
      "Default": "Information", // log padrão - pra saber o que tá rolando
      "Microsoft.AspNetCore": "Warning" // só warnings do ASP.NET - menos poluição
    }
  },
  "AllowedHosts": "*", // configurado via variável de ambiente
  "StringsConexao": {
    "ConexaoPadrao": "#{ORACLE_CONNECTION_STRING}#", // Oracle via variável de ambiente
    "MongoDB": "#{MONGODB_CONNECTION_STRING}#" // MongoDB para billing
  },
  "ConfiguracoesJwt": {
    "ChaveSecreta": "#{JWT_SECRET_KEY}#", // chave via variável de ambiente - agora sim seguro
    "Emissor": "#{JWT_ISSUER}#", // quem emite o token
    "Audiencia": "#{JWT_AUDIENCE}#", // pra quem é o token
    "ExpiracaoEmMinutos": "#{JWT_EXPIRATION_MINUTES}#" // configurável via env
  },
  "RabbitMQ": {
    "NomeHost": "#{RABBITMQ_HOST}#", // rabbit via variável de ambiente
    "Porta": "#{RABBITMQ_PORT}#", // porta configurável
    "NomeUsuario": "#{RABBITMQ_USERNAME}#", // usuário via env - agora sim seguro
    "Senha": "#{RABBITMQ_PASSWORD}#", // senha via env - hackear vai ser difícil
    "HostVirtual": "#{RABBITMQ_VIRTUAL_HOST}#", // host virtual configurável
    "NomeExchange": "eventos_estacionamento" // onde os eventos transitam
  }
}